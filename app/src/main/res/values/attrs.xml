<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- region Custom Components -->

    <declare-styleable name="PassPicker">
        <attr name="pickerTitle" format="string"/>
        <attr name="pickerSubtitle" format="string"/>
        <attr name="pickerMaxLimit" format="integer"/>
    </declare-styleable>

    <declare-styleable name="WeekDayPicker">
        <attr name="selected_day" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SearchToolbarView" >
        <attr name="searchText" format="string" />
		<attr name="searchSelector" format="reference" />
    </declare-styleable>

    <declare-styleable name="DottedLine">
        <attr name="minimumDotGap" format="dimension"/>
        <attr name="dotRadius" format="dimension"/>
        <attr name="dotColor" format="color"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

	<declare-styleable name="SeeAllTitleView">
		<attr name="seeAllTitle" format="string" />
		<attr name="seeAllText" format="string" />
		<attr name="seeAllShowButton" format="boolean" />
	</declare-styleable>

	<declare-styleable name="ExpandedToolbar">
		<attr name="toolbarTitle" format="string" />
		<attr name="toolbarTitleColor" format="color" />
		<attr name="toolbarNavIcon" format="reference" />
		<attr name="toolbarNavColor" format="color" />
		<attr name="toolbarBackgroundColor" format="color" />
	</declare-styleable>

    <declare-styleable name="CirclePagerIndicator">
        <attr name="cpiWidth" format="dimension" />
        <attr name="cpiHeight" format="dimension" />
        <attr name="cpiMargin" format="dimension" />
        <attr name="cpiGravity" format="integer" />
        <attr name="cpiOrientation" format="integer" />
        <attr name="cpiDrawableSelected" format="reference" />
        <attr name="cpiDrawable" format="reference" />
	</declare-styleable>

    <declare-styleable name="ViewTitleText">
        <attr name="editTextTitle" format="string"/>
        <attr name="editTextHint" format="string"/>
        <attr name="editTextBackgroundDrawable" format="integer"/>

        <attr name="android:inputType" />
    </declare-styleable>

	<declare-styleable name="FeedbackInputText">
		<attr name="fitEditTextTitle" format="string"/>
		<attr name="fitEditTextHint" format="string"/>
		<attr name="fitEditTextBackgroundDrawable" format="integer"/>
		<attr name="android:inputType"/>
		<attr name="android:maxLines"/>
	</declare-styleable>

    <declare-styleable name="SelectableImageButton">
        <attr name="sibText" format="string"/>
        <attr name="sibIcon" format="reference"/>
        <attr name="sibColorSelected" format="color"/>
        <attr name="sibColor" format="color"/>
        <attr name="sibBackgroundDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ViewTitleTextChoice">
        <attr name="titleTextChoiceSpinnerTitle" format="string"/>
        <attr name="titleTextChoiceSpinnerBackgroundDrawable" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ViewTitleTicket">
        <attr name="titleTicketSpinnerTitle" format="string"/>
        <attr name="titleTicketSpinnerBackgroundDrawable" format="integer"/>
    </declare-styleable>
    <!-- endregion -->

    <!--
        Braintree stylable to fix issue when migrating support version to 28.0.0-rc02
        https://github.com/braintree/braintree-android-drop-in/issues/77
    -->
    <declare-styleable name="foo">
        <attr name="textColorError" format="color" />
    </declare-styleable>

</resources>